@{
    ViewBag.Title = "Contact";
}

<section class="bg-19 bg-center bg-cover">
    <div class="bg-filter">
        <div class="container section-lg">
            <h1 class="top-title">Contact Us</h1>
        </div>
    </div>
</section>
<section class="bg-grey-3">
    <div class="container section">
        <div class="row margin-b30-xs">
            <div class="col-sm-4">
                <div class="float-box center">
                    <i class="fa fa-map-marker icon-c"></i>
                    <div class="float-text">
                        <h4>Our Locations</h4>
                        <p>Mooresville, NC 28115 <br> Parsippany, NJ 07054 <br> Bangalore, India</p>                        
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="float-box center">
                    <i class="fa fa-envelope icon-c"></i>
                    <div class="float-text">
                        <h4>Email Us</h4>
                        <p>
                            <a href="mailto: info@transcendentpro.com"> info@transcendentpro.com</a>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="float-box center">
                    <i class="fa fa-phone icon-c"></i>
                    <div class="float-text">
                        <h4>Phone Us</h4>
                        <p>+1 (704) 230-0078</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<section class="container section-lg">
    <div class="row">
        <div class="col-md-6 col-sm-7">

            <!-- Contact Form -->
            <div id="form-messages"></div>            
@using (Html.BeginForm("Contact", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "contact-form", role = "form",@class="form-horizontal" }))
{
                <div class="form-group icon">
                    <label for="name" class="col-sm-3 control-label">Full name</label>
                    <div class="col-sm-9 ">
                        <div class="control">
                            <input type="text" class="form-control" id="name" placeholder="Full name" name="name" required>
                            <i class="fa fa-user"></i>
                        </div>
                    </div>
                </div>
                <div class="form-group icon">
                    <label for="email" class="col-sm-3 control-label">Email</label>
                    <div class="col-sm-9 ">
                        <div class="control">
                            <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
                            <i class="fa fa-envelope"></i>
                        </div>
                    </div>
                </div>
                <div class="form-group icon">
                    <label for="Message" class="col-sm-3 control-label">Message</label>
                    <div class="col-sm-9 ">
                        <div class="control">
                            <textarea class="form-control" rows="8" id="message" placeholder="Message" name="message" required></textarea>
                            <i class="fa fa-comment"></i>
                        </div>
                    </div>
                </div>

                <div class="form-group icon">
                    <div class="col-sm-offset-3 col-sm-9">
                        <input type="submit" value="Send Message" name="submit" class="btn btn-primary">                       
                    </div>
                </div>
           }
            <div>
                @ViewBag.Message
                </div>
                <div class="space visible-xs">
                    
                </div>
            </div>

        <div class="col-md-6 col-sm-5">
            <ul class="list-unstyled info-bar">
                <li>
                    <h4>Additional info</h4>
                    <p>If you have any questions about our services, please email or call us. We'll get in touch with you as soon as possible.</p>
                </li>
                <li>
                    <h4>Our Location</h4>
                    <p>Mooresville, NC 28115</p>
                </li>
                <li>
                    <h4>Email Us</h4>
                    <p>
                        <a href="mailto: info@transcendentpro.com">info@transcendentpro.com</a>
                    </p>
                </li>
                <li>
                    <h4>Business Hours</h4>
                    <ul class="list-unstyled">
                        <li>Mo - Fr: 9am to 6pm (EST)</li>                        
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</section>

<section class="map">
    <h4 class="sr-only">Google Maps</h4>
    <div id="map"></div>
</section>
@section scripts {
<script>   
        $('#map').initMap({
            markers: {
                marker1: {
                    position: [35.5852, -80.824073, 17]
                }
            },
            options: {
                zoom: 7,
                scrollwheel: false
            },
            type: 'roadmap',
            center: [35.5852, -80.824073]
        });        
</script>
}